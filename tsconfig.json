{
  "compilerOptions": {
    "target": "es2020",
    "module": "CommonJS",
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "./dist",
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    },
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "typeRoots": [
      "./src/@types",
      "./@types",
      "./node_modules/@types"
    ],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
  },
  "exclude": [
    "node_modules"
  ]
}